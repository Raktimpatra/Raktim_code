#include<iostream>
using namespace std;
int main(){
int a,b;
cout<<"enter the value of a" << endl;
cin>>a;

cout << " enter the value of b"<< endl;
cin>>b;

char op;
cout <<" enter the operation"<<endl;
cin>>op;

switch(op){
    case '+' : cout<<"the value is " << (a+b) << endl;
    break;
    
    case '-' : cout <<"the value is "<< (a-b) << endl;
    break;
    
    case '*' : cout<<"the value is "<< (a*b) << endl;
    break;
     
    case '/' : cout<<"the value is "<< (a/b) << endl;
    break;
    
    case '%': cout<<"the value is "<< (a%b) << endl;
    break;
}
}
