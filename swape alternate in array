#include<iostream>
using namespace std;
void printarray(int arr[],int n){ 
for(int i=0;i<n;i++){
    cout<< arr[i]<<" ";
    
    
}

}
void swapAlternate(int arr[],int size){
    //for(int i=0;i<size-1;i=i+2)
    for(int i=0;i<size;i+=2){
        if(i+1<size){
            swap(arr[i],arr[i+1]);
        }
        
    }
}




int main(){
    int odd[5]={4,53,56,363,35};
    int even[6]={6,56,34,66,445,3};
    
    cout<<"the odd no is "<<endl;
    swapAlternate(odd,5);
    printarray(odd,5);
    
    
    cout<< endl;
    
    cout<<"the even no is "<<endl;
    swapAlternate(even,6);
    printarray(even,6);
    
    
    
    
}
